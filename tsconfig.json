{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./hooks",
      "./tests" // Added this to include our custom type definitions
    ],
    "types": [
      "cypress",
      "@testing-library/cypress",
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "strictBindCallApply": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "~*": [
        "*"
      ],
      "@theme": ["theme"],
    },
    "noEmit": false
  },
  "include": [
    "next-env.d.ts",
    "components/*",
    "hooks/*",
    "utils/*",
    "**/*.ts",
    "**/*.tsx",
    "tests/**/*",
    "cypress/support/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "cypress"
  ]
}
